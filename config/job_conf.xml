<?xml version="1.0"?>
<!-- A sample job config that explicitly configures job running the way it is configured by default (if there is no explicit config). -->
<job_conf>
    <plugins>
        <plugin id="local" type="runner" load="galaxy.jobs.runners.local:LocalJobRunner" workers="4"/>
        <plugin id="swarm" type="runner" load="galaxy.jobs.runners.swarm:SwarmJobRunner"/>
    </plugins>
    <handlers>
        <handler id="main"/>
    </handlers>
    <destinations default="local">
        <destination id="local" runner="local"/>
        <destination id="swarm" runner="swarm">
            <param id="docker_enabled">true</param>
        </destination>
    </destinations>
    <tools>
        <tool id="tophat2_swarm" destination="swarm"/>
        <tool id="cufflinks_swarm" destination="swarm"/>
        <tool id="cuffdiff_swarm" destination="swarm"/>
        <tool id="cuffmerge_swarm" destination="swarm"/>
    </tools>
</job_conf>
